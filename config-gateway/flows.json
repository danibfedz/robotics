    {
        "id": "09fcd167a5a2073c",
        "type": "function",
        "z": "356127748e520e14",
        "name": "Mensaje Telegram",
        "func": "// Asegurar objeto\nconst p = msg.payload || {};\nconst v = (p.value && typeof p.value === \"object\") ? p.value : p;\n\n// IMPORTANTE: pon aquí TU chatId correcto\nconst CHAT_ID = 6584348431;\n\nconst total = Number(v.totalAcc);\nconst ts = v.timestamp || p.timestamp || \"N/A\";\n\nmsg.payload = {\n    chatId: CHAT_ID,\n    type: \"message\",\n    content:\n        \"⚠️ Aviso de una posible caída\\n\\n\" +\n        \"Aceleración total: \" + (Number.isFinite(total) ? total.toFixed(2) : \"N/A\") + \" m/s²\\n\" +\n        \"Hora: \" + ts\n};\n\nreturn msg;\n",
